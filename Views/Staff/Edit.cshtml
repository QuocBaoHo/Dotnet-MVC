@model HRStaffManagement.Models.EditStaffViewModel

@{
    ViewData["Title"] = "Edit Staff";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning">
                    <h2 class="mb-0">
                        <i class="fas fa-user-edit"></i> Edit Staff Member
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data" id="staffForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PhotoPath" /> <!-- keeps current photo path -->

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StaffId" class="form-label"></label>
                                    <input asp-for="StaffId" class="form-control" placeholder="Enter staff ID" />
                                    <span asp-validation-for="StaffId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StaffName" class="form-label"></label>
                                    <input asp-for="StaffName" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="StaffName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control"
                                        placeholder="Enter phone number" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StartingDate" class="form-label"></label>
                                    <input asp-for="StartingDate" class="form-control" type="text" id="StartingDate"
                                        placeholder="Enter date (e.g., 22/11/2004 or 2004-11-22)" />
                                    <span asp-validation-for="StartingDate" class="text-danger"></span>
                                    <small class="form-text text-muted">Format: dd/MM/yyyy or yyyy-MM-dd</small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Photo" class="form-label">Upload New Photo</label>
                                    <input asp-for="Photo" class="form-control" type="file"
                                        accept=".jpg,.jpeg,.png,.gif" />
                                    <span asp-validation-for="Photo" class="text-danger"></span>
                                    <small class="form-text text-muted">Allowed formats: .jpg, .jpeg, .png, .gif (Max
                                        2MB)</small>

                                    @if (!string.IsNullOrEmpty(Model.PhotoPath))
                                    {
                                        <div class="mt-2">
                                            <small class="text-muted">Current photo:</small><br />
                                            <img src="~/@Model.PhotoPath" alt="Current Photo" class="img-thumbnail"
                                                style="max-width:100px; max-height:100px;" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="form-group d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script>
        // --- Allow multiple date input formats ---
        function parseDate(value) {
            // Try dd/MM/yyyy
            let parts = value.split("/");
            if (parts.length === 3) {
                let day = parts[0], month = parts[1], year = parts[2];
                if (day.length === 1) day = "0" + day;
                if (month.length === 1) month = "0" + month;
                return `${year}-${month}-${day}`; // convert to yyyy-MM-dd
            }

            // Try dd-MM-yyyy
            parts = value.split("-");
            if (parts.length === 3 && parts[2].length === 4 && parts[0].length <= 2) {
                let day = parts[0], month = parts[1], year = parts[2];
                if (day.length === 1) day = "0" + day;
                if (month.length === 1) month = "0" + month;
                return `${year}-${month}-${day}`;
            }

            // Already yyyy-MM-dd or other valid format
            return value;
        }

        // --- Regex validation for flexible formats ---
        $.validator.addMethod("dateregex", function(value, element) {
            return value === "" || /^(\d{1,2}[\/-]\d{1,2}[\/-]\d{4}|\d{4}-\d{1,2}-\d{1,2})$/.test(value);
        }, "Please enter a valid date (e.g., 22/11/2004 or 2004-11-22)");

        // --- Apply validation ---
        $("#staffForm").validate({
            rules: {
                StartingDate: { dateregex: true }
            },
            messages: {
                StartingDate: { dateregex: "Please enter a valid date (e.g., 22/11/2004 or 2004-11-22)" }
            }
        });

        // --- Convert input before submission ---
        $("#staffForm").on("submit", function () {
            const input = $("#StartingDate");
            const val = input.val();
            if (val) {
                const formatted = parseDate(val.trim());
                input.val(formatted);
            }
        });
    </script>
}
