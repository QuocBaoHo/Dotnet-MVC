@model HRStaffManagement.Models.Staff

@{
    ViewData["Title"] = "Delete Staff";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirm Delete
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-circle"></i> Are you sure you want to delete this staff member?
                        </h4>
                        <p>This action cannot be undone. All associated data will be permanently removed.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.PhotoPath))
                            {
                                <img src="~/@Model.PhotoPath" alt="@Model.StaffName's photo"
                                    style="width: 200px; height: 150px; object-fit: contain; border-radius: 8px; background-color: #f0f0f0;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto" style="width: 150px; height: 150px;">
                                    <i class="fas fa-user fa-4x text-white"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.StaffId)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.StaffId)
                                </dd>
                                
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.StaffName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.StaffName)
                                </dd>
                                
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Email)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Email)
                                </dd>
                                
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.PhoneNumber)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.PhoneNumber)
                                </dd>
                                
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.StartingDate)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.StartingDate)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="StaffId" />
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Permanently
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}