<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Staff Management</title>
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~_Layout.cshtml.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/HRStaffManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg modern-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Staff" asp-action="Index">
                    <i class="fas fa-users-cog"></i>
                    <span>Staff Management</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @* <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Staff" asp-action="Index">
                                <i class="fas fa-home"></i>
                                <span>Dashboard</span>
                            </a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Staff" asp-action="Index">
                                <i class="fas fa-users"></i>
                                <span>Staff</span>
                            </a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i>
                                <span>Privacy</span>
                            </a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="main-wrapper">
        <div class="container">
            <main role="main" class="main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="modern-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-left">
                    <p class="footer-copyright">
                        <i class="far fa-copyright"></i> 2025 HRStaffManagement. All rights reserved.
                    </p>
                </div>
                
                <div class="footer-center">
                    <nav class="footer-links">
                        <a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                            Privacy Policy
                        </a>
                        <span class="footer-separator">|</span>
                        <a class="footer-link" asp-area="" asp-controller="Home" asp-action="Index">
                            Terms of Service
                        </a>
                        <span class="footer-separator">|</span>
                        <a class="footer-link" asp-area="" asp-controller="Home" asp-action="Index">
                            Support
                        </a>
                    </nav>
                </div>
                
                <div class="footer-right">
                    <div class="footer-social">
                        <a href="https://linkedin.com" class="social-icon" title="LinkedIn" aria-label="LinkedIn" target="_blank">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="https://twitter.com" class="social-icon" title="Twitter" aria-label="Twitter" target="_blank">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="https://github.com" class="social-icon" title="GitHub" aria-label="GitHub" target="_blank">
                            <i class="fab fa-github"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>